@using CaglarBlog.Models
@model List<Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    CaglarBlogEntities db = new CaglarBlogEntities();


    var yorumlist = db.Comment.ToList();
}

<section class="blog-post-area section-margin mt-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">

                @if (User.Identity.IsAuthenticated)
                {

                
                foreach (var item in Model)
                {

                    <div class="single-recent-blog-post">

                        <div class="thumb">
                            <img class="img-fluid" src="~/img/kahkit.jpg" alt="">
                            <ul class="thumb-info">
                                <li><a href="/Posts/Goster/@item.PostID"><i class="ti-user"></i>Admin</a></li>
                                <li><a href="/Posts/Goster/@item.PostID"><i class="ti-themify-favicon"></i>@yorumlist.Where(x => x.Postid == item.PostID).Count() Yorum</a></li>
                                <li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <button type="submit" class="bg-danger">@Html.ActionLink("Delete", "DeletePost", new { id = item.PostID })</button>
                                        <button type="submit" class="bg-danger">@Html.ActionLink("Update", "kayitDuzenle", new { id = item.PostID })</button>
                                    }

                                </li>
                                <li><a href="/Posts/LikeKaydet/@item.PostID"><img style="width:20px;margin-top:-5px" src="~/img/flike.png" /> @item.Begeni </a></li>

                            </ul>
                        </div>


                        <div class="details mt-20">
                            <a href="/Posts/Goster/@item.PostID">
                                <h3>
                                    @item.PostBaslik
                                </h3>
                            </a>
                            <p class="tag-list-inline"><b>Kategori:</b> <a href="#"><b>@item.Category.CategoryName</b></a></p>
                            

                            <a class="button" href="/Posts/Goster/@item.PostID">Tamamını Oku<i class="ti-arrow-right"></i></a>
                            <br />
                            <input type="hidden" name="PostID" value="@item.PostID" />
                            <br />
                        </div>
                    </div>
                }
}
            </div>



        </div>

    </div>
</section>


