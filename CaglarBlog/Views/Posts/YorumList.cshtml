@model IEnumerable<CaglarBlog.Models.Comment>

@{
    ViewBag.Title = "YorumList";
}

<h2>YorumList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CommentIcerik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CommentIcerik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateAdded)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new {  id=item.CommentID  })
        </td>
    </tr>
}

</table>
